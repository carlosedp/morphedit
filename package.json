{
  "name": "morphedit",
  "description": "A desktop application for creating audio reels, samples and editing.",
  "author": "Carlos Eduardo de Paula",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosedp/morphedit.git"
  },
  "keywords": [
    "audio",
    "editor",
    "desktop",
    "react",
    "electron"
  ],
  "homepage": "https://carlosedp.github.io/morphedit/",
  "bugs": {
    "url": "https://github.com/carlosedp/morphedit/issues"
  },
  "private": true,
  "version": "4.6.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc -b && vite build && npm run build:manual",
    "build:manual": "node scripts/build-manual.js",
    "clean": "rimraf dist && rimraf node_modules",
    "lint": "eslint . --fix",
    "pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
    "format": "npm run pretty && npm run lint",
    "depcheck": "knip",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto-mono": "^5.2.6",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "electron-updater": "^6.3.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "wavesurfer.js": "^7.9.5",
    "web-audio-beat-detector": "^8.2.29",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "knip": "^5.61.2",
    "marked": "^15.0.12",
    "prettier": "^3.6.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^7.0.0"
  },
  "main": "electron-main.cjs",
  "build": {
    "appId": "com.carlosedp.morphedit",
    "productName": "MorphEdit",
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "package.json",
      "preload.js"
    ],
    "publish": {
      "provider": "github",
      "owner": "carlosedp",
      "repo": "morphedit"
    },
    "directories": {
      "buildResources": "public",
      "output": "electron-dist"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "notarize": false,
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
